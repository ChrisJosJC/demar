		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- <ViewTransitions /> -->
		<meta property="og:type" content="business.business" />
		<meta property="og:title" content="Prodcutos Demar" />
		<meta property="og:url" content="https://www.productosdemar.com" />
		<meta
			property="og:image"
			content="https://www.productosdemar.com/lavaplatos.webp"
		/>
