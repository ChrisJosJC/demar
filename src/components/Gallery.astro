---
const { products } = Astro.props;

const titles= [
"Hogar", "Limpieza", "Automotriz", "Cuidado Personal"
]
---

<main class="w-full min-h-screen mb-4">
	<ul class="grid grid-cols-1 gap-4 px-2 sm:mr-4 box-border">
		{
			products.map((column: any[], i) => {
				return (
						<h2 class="font-bold text-3xl my-4 underline">{titles[i]}</h2>
					<li class="grid gap-4 lg:grid-cols-3 md:grid-cols-2 grid-cols-1">
						{column.map(({ image, title, short_description }) => {
							return (
								<div class="flex flex-col group shadow-md rounded-lg shadow-slate-500/30">
									<img
										class="max-h-80 object-cover aspect-square duration-200 hover:object-contain transition-all"
										src={image}
										alt={title}
									/>
									<div class="group-hover:opacity-100 flex flex-col items-baseline justify-end  bg-gradient-to-tr p-2">
										<h3 class="text-lg font-bold">
											{title}
										</h3>
										<p class="text-sm">
											{short_description}
										</p>
									</div>
								</div>
							);
						})}
					</li>
				);
			})
		}
	</ul>
</main>
